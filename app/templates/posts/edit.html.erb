<turbo-frame id="<%= "post_#{post.id}_frame" %>" >
    <%= form_for :post,
      routes.path( :update_post, id: post.id ),
      method: :patch do |f|
        [
          render( "form", f: f, errors: errors ),
          tag.p { f.submit "Update", class: 'btn btn-primary' }
        ].join
      end %>
</turbo-frame>
