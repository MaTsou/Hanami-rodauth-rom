%my-container( bordered radius0 bg0 padding1 )
  %div{
    style: "display: flex; align-items: center; justify-content: space-between;"
    }
    %details
      %summary{ style: "display: flex;" }= post.title
      %p= post.body

    %div{ style:"display: flex; gap: 1ex;" }
      %a.btn{
        href: routes.path( :edit_post, id: post.id ),
        style: 'padding: 0;'
        }= icons[:edit]

      = form_for :post,
        action: routes.path( :delete_post, id: post.id ),
        method: 'delete' do |f|
        = f.submit icons[:trash],
          class: 'btn',
          style:'padding: 0;',
          'data-turbo-confirm': 'Are you sure ?'
